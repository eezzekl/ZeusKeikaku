@model YukindieMVC.Models.Album

@{
    ViewBag.Title = "Create";
}

@section scripts
{
    <script>
        var urlGet = '@Url.Action("Get", "Album", new { area = "Admin" })';
        var urlGetSubGenero = '@Url.Action("Get", "SubGenero", new { area = "Admin" })';
        var urlGuardarAlbum = '@Url.Action("Guardar", "Album", new { area = "Admin" })';
        var urlListado = '@Url.Action("IndexDinamico", "Album", new { area = "Admin" })';
        var PerfilId = 2;
    </script>
    <!--
        SOY PARTIDARIO DE CREAR CARPETAS DE SCRIPS POR CADA SECCION DE CODIGO
        TODOS LOS SCRIPS QUE TENGAN QUE VER CON ALBUM, Y NO SEAN GENERICOS
        ESTEN DENTRO DE LA CARPETA SCRIPS DENTRO DE LA CARPETA ALBUM
        -->
    <script src="~/Areas/Admin/Scrips/Album/Create.js"></script>

    <script src="~/assets/Texttext/textext.core.js"></script>
    <script src="~/assets/Texttext/textext.plugin.ajax.js"></script>
    <script src="~/assets/Texttext/textext.plugin.arrow.js"></script>
    <script src="~/assets/Texttext/textext.plugin.autocomplete.js"></script>
    <script src="~/assets/Texttext/textext.plugin.clear.js"></script>
    <script src="~/assets/Texttext/textext.plugin.filter.js"></script>
    <script src="~/assets/Texttext/textext.plugin.focus.js"></script>
    <script src="~/assets/Texttext/textext.plugin.prompt.js"></script>
    <script src="~/assets/Texttext/textext.plugin.suggestions.js"></script>
    <script src="~/assets/Texttext/textext.plugin.tags.js"></script>
    <script src="~/assets/js/Cust_Textext.js"></script>
    @*<script src="~/Areas/Admin/asd/Create.js"></script>*@
}

<div class="col-lg-12">
    <section class="box">
        <div class="content-body" style="display: block;">
            <div class="row">
                <div class="page-header">
                    <a href="~/Admin/Album/Index" class="pull-right btn btn-default"><i class="glyphicon glyphicon-arrow-left"></i> Regresar</a>
                    <h2><strong>Nuevo Álbum</strong></h2>
                </div>
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label>Título:</label>
                                <input id="txtTitulo" type="text" class="form-control" placeholder="Título del Álbum" />
                            </div>
                            <div class="form-group">
                                <label>Carátula:</label>
                                <input id="FileUpload" type="file" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Publicación:</label>
                                <input type="text" id="dpFechaPublicacion" class="form-control datepickeres" />
                            </div>
                            <div class="form-group">
                                <label>Género:</label>
                                <select id="cmbSubGenero" class="form-control"></select>
                            </div>
                            <!-- El status va oculto al crear, ya que al crear una nueva cuenta siempre es activa-->
                            <div class="form-group" style="display:none">
                                <label>Estatus:</label>
                                <div class="row">
                                    <div class="col-xs-12">
                                        <input type="checkbox" id="chkEstatus" class="icheck-minimal-red" />
                                        Activo
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label>*Formato:</label>
                                <select id="cmbFormato" class="form-control m-bot15">
                                    <option value="CD">CD</option>
                                    <option value="CD + DVD">CD + DVD</option>
                                    <option value="DIGITAL">DIGITAL</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Contenido:</label>
                                <input type="text" id="txtContenido" class="form-control" placeholder="Título del Álbum" />
                            </div>
                            <div class="form-group">
                                <br />
                                <input type="checkbox" id="chkSale" class="icheck-minimal-red" />
                                Mostrar Datos de venta
                            </div>
                        </div>
                    </div>
                    <div class="row" id="dvSale" style="display:none">
                        <div class="col-md-12"><h2>Datos de venta</h2></div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label>Url Venta:</label>
                                <input type="text" id="txtLinkCompra" class="form-control" placeholder="Título del Álbum" />
                            </div>
                            <div class="form-group">
                                <label>Precio:</label>
                                <div class="row">
                                    <div class="col-xs-8">
                                        <input type="text" id="txtPrecio" placeholder="A que precio venderá su producto" class="form-control" />
                                    </div>
                                    <div class="col-xs-4">
                                        <input type="checkbox" id="chkPrecio" class="icheck-minimal-red" />
                                        Gratis
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">

                            <div class="form-group">
                                <label>*Precio de Oferta:</label>
                                <div class="row">
                                    <div class="col-xs-8">
                                        <input type="text" id="txtOferta" placeholder="¿Cuenta con alguna promoción?" class="form-control" />
                                    </div>
                                    <div class="col-xs-4">
                                        <input type="checkbox" id="chkOferta" class="icheck-minimal-red" />
                                        Gratis
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Promoción:</label>
                                <input type="text" id="txtPromocion" placeholder="Promoción para sus fans" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <span class="pull-right">
                                <button class="btn btn-yukindie" onclick="Redireccionar('Admin','Album','','')">Cancelar</button>
                                <button class="btn btn-yukindie" onclick="guardar()">Aceptar</button>
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <br />
                            <textarea id="textarea" rows="1"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

