@model Model.Usuario
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script> 
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script> 

    <script>
        var GetIndex= '@Url.Action("Index", "Home")';
    </script>
<script src="~/Scripts/f/Login.js"></script>
}

@using (Ajax.BeginForm("AuthChallange", "Home", new AjaxOptions { OnBegin = "Begin", OnFailure = "sbErrorHandler", OnSuccess = "sbSuccess", OnComplete = "complete", HttpMethod = "POST" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="col-lg-12">
        <section class="box">
            <br />
            <div class="content-body" style="display:block">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                        <img src="~/Images/CrearCuenta/indexCreateUser.jpg" width="100%" />
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                        <div class="logo-area2" align="center">
                            <img src="~/Images/CrearCuenta/yukindiebrand.png" />
                        </div>
                        <div class="logo-text" align="center">
                            <strong style="color: #192445">Music For Freedom</strong>
                        </div>
                        <div id="frmlogin">
                            <fieldset style="padding: 4px">
                                <div class="form-group input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    @Html.TextBoxFor(u => u.Correo, new { @class = "form-control", placeholder = "Correo", autofocus = true, type = "text", required = "required", autocomplete = "off" })
                                </div>
                                <div class="form-group input-group">
                                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                    @Html.TextBoxFor(u => u.Contraseña, new { @class = "form-control", placeholder = "Contraseña", required = "required", type = "password", autocomplete = "off" })
                                </div>
                                @*<div class="text-right">*@
                                    <button id="btnLogin" type="submit" value="Iniciar sesión" class="btn btn-yukindie" style="width: 100%" text="Login" essave="true">Iniciar Sesión</button>
                                @*</div>*@
                                <center><h4>O por</h4></center>
                                <button type="button" class="btn btn-fb" style="width: 100%;color: #fff; background-color: #3b5998">Facebook</button>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
}

